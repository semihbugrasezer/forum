# Authentication Configuration
# Required: The callback URL for authentication redirects
NEXT_PUBLIC_AUTH_REDIRECT_URL=https://your-domain.vercel.app/auth/callback

# Application Configuration
# Required: Your application's public URL
NEXT_PUBLIC_APP_URL=https://thy-forum.vercel.app

# Required: Environment mode (development/production)
NODE_ENV=production

# Security Configuration
# Optional: Enable admin access in development mode (true/false)
NEXT_PUBLIC_ADMIN_ACCESS=false

# Required in development: Admin email for development mode
DEVELOPMENT_ADMIN_EMAIL=admin@thy.com

# Performance Configuration for 50,000 users
# Database connection pooling - higher values for production
DB_POOL_SIZE=50
DB_CONNECTION_TIMEOUT=30

# Rate Limiting Configuration - higher values for production
RATE_LIMIT_WINDOW=60000
MAX_REQUESTS_PER_WINDOW=250

# Cache Configuration - optimized for production
CACHE_DURATION=1800
ENABLE_EDGE_CACHING=true
ENABLE_CDN=true

# Security Configuration - enhanced for production
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
COOKIE_MAX_AGE=604800
CSP_DIRECTIVES="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://oauhlrhvaqiuusuiqfno.supabase.co;"

# Logging Configuration
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Email Configuration
# Optional: SMTP configuration for email notifications
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Feature Flags
# Optional: Enable/disable features
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME_CHAT=false

# Optional: Redis configuration if using Redis for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Authentication
NEXTAUTH_URL=https://thy-forum.vercel.app
# NEXTAUTH_SECRET should be set in Vercel directly

# Website
NEXT_PUBLIC_SITE_URL=https://thy-forum.vercel.app 