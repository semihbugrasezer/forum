# Supabase Configuration
# Required: Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your-project-url

# Required: Your Supabase anonymous key for client-side operations
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Required: Your Supabase service role key for admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication Configuration
# Required: The callback URL for authentication redirects
NEXT_PUBLIC_AUTH_REDIRECT_URL=https://your-domain.vercel.app/auth/callback

# Application Configuration
# Required: Your application's public URL
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Required: Environment mode (development/production)
NODE_ENV=production

# Security Configuration
# Optional: Enable admin access in development mode (true/false)
NEXT_PUBLIC_ADMIN_ACCESS=false

# Required in development: Admin email for development mode
DEVELOPMENT_ADMIN_EMAIL=admin@thy.com

# Rate Limiting Configuration
# Optional: Time window for rate limiting in milliseconds (default: 60000)
RATE_LIMIT_WINDOW=60000

# Optional: Maximum requests per window (default: 100)
MAX_REQUESTS_PER_WINDOW=100

# Cookie Security
# Optional: Enable secure cookies (default: true in production)
COOKIE_SECURE=true

# Optional: SameSite cookie policy (default: lax)
COOKIE_SAME_SITE=lax

# Optional: Cookie max age in seconds (default: 7 days)
COOKIE_MAX_AGE=604800

# Content Security Policy
# Optional: CSP directives (default: strict CSP)
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# Database Configuration
# Optional: Maximum database pool connections (default: 10)
DB_POOL_SIZE=10

# Optional: Database connection timeout in seconds (default: 30)
DB_TIMEOUT=30

# Logging Configuration
# Optional: Log level (debug/info/warn/error)
LOG_LEVEL=info

# Optional: Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Email Configuration
# Optional: SMTP configuration for email notifications
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Feature Flags
# Optional: Enable/disable features
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME_CHAT=false

# Cache Configuration
# Optional: Cache duration in seconds
CACHE_DURATION=3600

# Optional: Redis configuration if using Redis for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password 